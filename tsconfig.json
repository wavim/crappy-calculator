{
	"include": ["src/**/*"],

	"compilerOptions": {
		"strict": true,

		"target": "ESNext",
		"module": "ESNext",

		"moduleResolution": "bundler",
		"isolatedModules": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,

		"noEmit": true,
		"sourceMap": true,
		"declaration": true,
		"declarationDir": "./dist/types",
	}
}
